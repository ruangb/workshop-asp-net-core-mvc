@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Index";
}

<h2>@ViewData["Title"] </h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(x => x.Name)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Email)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Salary)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.Name)</td>
                <td>@Html.DisplayFor(x => item.Email)</td>
                <td>@Html.DisplayFor(x => item.BirthDate)</td>
                <td>@Html.DisplayFor(x => item.Salary)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
